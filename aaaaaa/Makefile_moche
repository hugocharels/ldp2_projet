CXX = g++
CXXFLAGS += -std='c++20' -Werror -Wall -Wextra -pedantic -lfltk -lfltk_images -ljsoncpp


main: configs.o Model/Board.o Model/Levels.o Model/Sokoban.o View/BoardDisplay.o View/EditorDisplay.o View/MainDisplay.o View/MenuDisplay.o Controller/BoardController.o Controller/EditorController.o Controller/MainController.o Controller/MenuController.o
	${CXX} ${CXXFLAGS} -o sokoban main.cpp configs.o Board.o Levels.o Sokoban.o BoardDisplay.o EditorDisplay.o MainDisplay.o MenuDisplay.o BoardController.o EditorController.o MainController.o MenuController.o
	make clean


configs.o: configs.cpp configs.hpp
	${CXX} ${CXXFLAGS} -c configs.cpp


Model/Board.o: Model/Board.cpp Model/Board.hpp
	${CXX} ${CXXFLAGS} -c Model/Board.cpp

Model/Levels.o: Model/Levels.cpp Model/Levels.hpp
	${CXX} ${CXXFLAGS} -c Model/Levels.cpp

Model/Sokoban.o: Model/Sokoban.cpp Model/Sokoban.hpp
	${CXX} ${CXXFLAGS} -c Model/Sokoban.cpp


View/BoardDisplay.o: View/BoardDisplay.cpp View/BoardDisplay.hpp
	${CXX} ${CXXFLAGS} -c View/BoardDisplay.cpp

View/EditorDisplay.o: View/EditorDisplay.cpp View/EditorDisplay.hpp
	${CXX} ${CXXFLAGS} -c View/EditorDisplay.cpp

View/MainDisplay.o: View/MainDisplay.cpp View/MainDisplay.hpp
	${CXX} ${CXXFLAGS} -c View/MainDisplay.cpp

View/MenuDisplay.o: View/MenuDisplay.cpp View/MenuDisplay.hpp
	${CXX} ${CXXFLAGS} -c View/MenuDisplay.cpp


Controller/BoardController.o: Controller/BoardController.cpp Controller/BoardController.hpp
	${CXX} ${CXXFLAGS} -c Controller/BoardController.cpp

Controller/EditorController.o: Controller/EditorController.cpp Controller/EditorController.hpp
	${CXX} ${CXXFLAGS} -c Controller/EditorController.cpp

Controller/MainController.o: Controller/MainController.cpp Controller/MainController.hpp
	${CXX} ${CXXFLAGS} -c Controller/MainController.cpp

Controller/MenuController.o: Controller/MenuController.cpp Controller/MenuController.hpp
	${CXX} ${CXXFLAGS} -c Controller/MenuController.cpp


clean:
	rm *.o || echo -n ""
